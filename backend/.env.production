# Production Environment Configuration
NODE_ENV=production
PORT=3001

# Frontend Configuration
FRONTEND_URL=https://emx-dashboard.company.com

# Database Configuration (SQLite for production)
DB_PATH=./database.sqlite

# JWT Configuration
JWT_SECRET=emx-dashboard-super-secure-jwt-key-2025-production
JWT_EXPIRES_IN=7d

# Security Configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS Configuration
CORS_ORIGIN=https://emx-dashboard.company.com
CORS_CREDENTIALS=true
